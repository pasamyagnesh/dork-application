    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  button.full-width {
    display: block;
    text-align: center;
    width: 100%;
  }

  nav {
    border-bottom: #afafaf 0.5px solid;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 0;
    color: #e1e1df;
    position: relative;
    /* Make the navigation a positioned element */
  }

  nav a {
    font-size: 16px;
    color: #252525;
    text-align: center;
    padding: 7px 16px;
    text-decoration: none;
    position: relative;
    /* Make the anchor tag a positioned element */
  }

  nav a::after {
    content: "";
    /* Empty content for the pseudo-element */
    position: absolute;
    /* Position the pseudo-element */
    bottom: -3px;
    /* Adjust the distance of the bar from the text */
    left: 50%;
    /* Position the bar in the center of the text */
    transform: translateX(-50%);
    /* Center the bar horizontally */
    width: 0;
    /* Initially set width to 0 */
    height: 2px;
    /* Height of the bar */
    background-color: #ebebff;
    /* Color of the bar */
    transition: width 0.25s ease-in-out;
    /* Add transition for smooth effect */
    cursor: pointer;
    /* Add pointer cursor on hover below the text */
  }

  nav a:hover::after {
    width: 80%;
    /* Increase the width of the bar on hover */
  }

  nav a:hover {
    border-radius: 5px;
    background-color: #ebebff;
    color: #7474ff;
    transition: all 0.3s;
  }

  nav #theme-toggle i.far {
    background-color: None;
  }

  #theme-toggle i.far {
    transition: color 0.5s ease, transform 0.5s ease, box-shadow 0.3s ease;
    /* Apply transition for smooth color, rotation, and shadow change */
  }

  /* Change rotation, color, and shadow when hovered */
  #theme-toggle:hover i.far {
    border: 1px solid #3d4259;
    color: #c291e2;
    /* Change color on hover */
    transform: rotate(30deg);
    /* Apply rotation on hover */
    transition: color 0.5s ease, transform 0.5s ease, box-shadow 0.3s ease;
    /* Apply transition for smooth color, rotation, and shadow change */
  }

  .left-links {
    display: flex;
    align-items: center;
    margin-left: 20px;
    /* Increase left margin */
  }

  .left-links i,
  .left-links .logo {
    font-size: 30px;
    /* Increase icon and logo size */
    margin-right: 10px;
    /* Adjust margin between icon and logo */
  }

  .left-links .logo {
    font-weight: 600;
  }

  .center-links {
    flex-grow: 1;
    /* Grow to fill the available space */
    display: flex;
    justify-content: center;
    /* Align items horizontally */
  }

  .right-links {
    display: flex;
    align-items: center;
  }

  .right-links a {
    margin-left: 10px;
    /* Adjust margin between logout link and username */
  }
</style>

