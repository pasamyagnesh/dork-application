    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap');

        body {
            font-family: "Sora", sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1 {
            font-family: "Sora", sans-serif;
            color: #333;
            font-weight: 400;

        }

        a {
            text-decoration: none;
        }

        button {
            font-family:"Poppins", sans-serif;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: normal;
            color: #ffffff;
            background-color: #0d0c22; /* Blue color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 15%;
            padding: 10px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: hsl(244, 20%, 17%); /* Darker blue on hover */
        }

        /* Style for the "Sign Up" button */
        button.signup {
            background-color: #2ecc71; /* Green color */
        }

        button.signup:hover {
            background-color: #3c5546; /* Darker green on hover */
        }
        nav {
            background-color: rgb(228, 228, 228);
            overflow: hidden;
        }

        nav a {
            float:left;
            display: block;
            color:#333;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        nav a:hover {
            background-color: #ddd;
            color: black;
        }
    </style>
</head>

