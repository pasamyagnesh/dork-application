    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap');

        body {
            font-family: "Sora", sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1 {
            font-family: "Sora", sans-serif;
            color: #333;
            font-weight: 400;
        }

        a {
            text-decoration: none;
        }

        button {
            font-family: "Poppins", sans-serif;
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            font-weight: normal;
            color: #ffffff;
            background-color: #0d0c22;
            /* Blue color */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 15%;
            padding: 10px;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: hsl(244, 20%, 17%);
            /* Darker blue on hover */
        }

        /* Style for the "Sign Up" button */
        button.signup {
            background-color: #2ecc71;
            /* Green color */
        }

        button.signup:hover {
            background-color: #3c5546;
            /* Darker green on hover */
        }

        nav {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #333;
            /* Dark gray background */
            z-index: 1000;
            /* Ensure it stays above other content */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            /* Add shadow for a better look */
            padding: 15px 0;
            /* Add padding to top and bottom */
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        nav .left-links {
            display: flex;
            align-items: center;
            margin-left: 20px; /* Increase left margin */
        }

        nav .left-links i,
        nav .left-links .logo {
            color: white; /* Set color to white */
            font-size: 24px; /* Adjust size if needed */
            margin-right: 10px; /* Adjust margin between icon and logo */
        }

        nav .left-links .logo {
            font-weight: bold; /* Optionally set font weight */
        }

        nav .center-links {
            flex: 1; /* Take remaining space */
            text-align: center; /* Center align links */
        }

        nav .center-links a {
            margin: 0 10px;
            color: #fff;
            /* White color for the links */
            text-decoration: none;
        }

        nav .center-links a:hover {
            background-color: #555;
            color: white;
            /* Darker gray on hover */
        }

        #content {
            margin-top: 70px;
            /* Adjust this margin to push content below the fixed navigation bar */
        }

    </style>
</head>

<body>
    <nav>
        <div class="left-links">
