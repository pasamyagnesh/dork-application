<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
</head>

<body>
    <div class="navi">
        <button><a href="/" style="color: white;">Home</a></button>

    </div>
    
    
    <form class="login" action="/signup" method="post">
        <div class="signup-header">
            <h1>Create Account</h1>
        </div>
        <label for="firstname">First name:</label>
        <input type="text" id="firstname" name="firstname" placeholder="Enter First name" required>
        <label for="Lastname">Last name:</label>
        <input type="text" id="lastname" name="lastname" placeholder="Enter last name" required>
        <label for="Lastname">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter" required>

        
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" placeholder="Enter your username" required>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required>
        
        <button type="submit" onclick="playAudio()">Sign Up</button>
        <p>Already have an account? <a href="/login">Login</a></p>
        <audio id="myAudio">
            <source src="click.wav" type="audio/mpeg">
        </audio>
        
            <script>
  function validateForm() {
    const username = document.getElementById('username').value;
    const email = document.getElementById('email').value;
    const firstname = document.getElementById('firstname').value;
    const lastname = document.getElementById('lastname').value;

    if (!username || !email || !firstname || !lastname) {
      alert('All fields are required');
      return false;
    }

    return true;
  }
</script>
        </script>
    </form>
</body>

</html>
